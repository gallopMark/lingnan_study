<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_12"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/course_img"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="课程标题"
                android:textSize="@dimen/font_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/course_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/course_period"
                    android:drawablePadding="3dp"
                    android:maxLength="10"
                    android:text="12学时"
                    android:textColor="#8A8E9B"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/course_enroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@drawable/course_enroll"
                    android:drawablePadding="3dp"
                    android:ellipsize="middle"
                    android:maxLines="1"
                    android:text="122,120人报读"
                    android:textColor="#8A8E9B"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/course_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_course_type"
                android:ellipsize="end"
                android:maxLength="10"
                android:maxLines="1"
                android:text="引领式课程"
                android:textColor="@color/defaultColor"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:background="@color/spaceColor" />
</LinearLayout>