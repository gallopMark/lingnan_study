<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/spaceColor"
    android:paddingBottom="@dimen/margin_size_10"
    android:paddingTop="@dimen/margin_size_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_size_30"
        android:layout_marginRight="@dimen/margin_size_30"
        android:background="@drawable/shape_course_section_bg"
        android:paddingLeft="@dimen/margin_size_12"
        android:paddingRight="@dimen/margin_size_12">

        <ImageView
            android:layout_width="@dimen/margin_size_20"
            android:layout_height="@dimen/margin_size_20"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_size_4"
            android:scaleType="centerInside"
            android:src="@drawable/course_single_title_ico" />

        <TextView
            android:id="@+id/section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/margin_size_6"
            android:paddingTop="@dimen/margin_size_6"
            android:text="课前准备"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

</RelativeLayout>